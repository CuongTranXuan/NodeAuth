doctype html
html
  head
    meta(charset='UTF-8')
    title Oauth demo
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js')
    script(src='js/custom.js')
    link(href='stylesheets/main.css', rel='stylesheet', type='text/css')
    // Latest compiled and minified CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
  body(ng-app='app', ng-controller='ctrl')
    div
      .container
        .row
          .col-md-4.col-md-offset-4
            .account-box
              .logo
                img(src='http://design.ubuntu.com/wp-content/uploads/ubuntu-logo32.png', width='80px', alt='')
              form.form-signin(id="login", method="POST", action="/login")
                .form-group
                  input.form-control#username(type='text', name='username', placeholder='username', required='', autofocus='')
                .form-group
                  input.form-control#password(type='password', placeholder='Password', name='password', required='')
                button.btn.btn-lg.btn-block.btn-primary(type='submit')
                  | Sign in
              a.forgotLnk(href='#') I can't access my account
              .or-box
                .row
                  .col-md-12.row-block
                    a.btn.btn-lg.btn-danger.btn-block(href='', ng-click='auth()')
                      strong Login With Google
              .or-box.row-block
                .row
                  .col-md-12.row-block
                    a.btn.btn-primary.btn-block(href='/signup') Create New Account
